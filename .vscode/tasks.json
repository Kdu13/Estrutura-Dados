{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar e Executar C++ (PowerShell)",
      "type": "shell",
      "command": "g++",
      "args": [
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        ";",
        "Start-Process",
        "\"${fileDirname}\\${fileBasenameNoExtension}.exe\"",
        "-NoNewWindow",
        "-Wait"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      }
    }
  ]
}
